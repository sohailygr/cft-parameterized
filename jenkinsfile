pipeline {
    agent any

    parameters {
        string(name: 'VPC_CIDR', defaultValue: '10.0.0.0/16', description: 'CIDR block for the VPC')
    }

    stages {
        stage('Deploy VPC') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'aamir-awscli-ygrusr2', variable: 'AWS_ACCESS_KEY_ID'),
                                 string(credentialsId: 'secretkey-awscli-ygrusr2', variable: 'AWS_SECRET_ACCESS_KEY')]){
                    sh "aws cloudformation create-stack --stack-name ameer-datbrick-vpc-stack --template-body file://aws-vpc.yaml --parameters ParameterKey=VpcCidrBlock,ParameterValue=${params.VPC_CIDR} --region 'us-east-1a'"
                }
            }
        }
    }
}
}
